<div class="navbar">
  <div class="navbar__logo"><a href="/">VideoClub</a></div>
  <div class="navbar__faq"><a href="/">FAQ</a></div>
  <div class="navbar__login"><a href="/logout">Logout</a></div>
</div>

<header class="movies-header"></header>
<main class="container__movies">

  <form action="" class="genre">
    <select name="genre" class="genre__selection" id="genre" onchange="this.form.submit()">
      <option value="">Genre</option>
      <option value="All">All Movies</option>
      <option value="Action">Action</option>
      <option value="Fantasy" selected>Fantasy</option>
      <option value="Mystery">Mystery</option>
      <option value="Comedy">Comedy</option>
      <option value="Drama">Drama</option>
      <option value="Romance">Romance</option>
      <option value="Animation">Animation</option>
    </select>
    <!-- <input type="submit" class="btn genre__submit" value="Get Movies" /> -->
  </form>
  <h3 class="heading-secondary heading-secondary--movies">

    <%= genre %> Movies
  </h3>
  <section class="movie__list">
    <% for(let i=0; i < listOfMovies.length; i++) { %>
      <a href="title/<%= listOfMovies[i].id %> ">
        <div class="movie__card" style="background-image:url('<%= listOfMovies[i].posterUrl %>');">
          <p class="movie__card-title">
            <%= listOfMovies[i].description %>
          </p>
        </div>
      </a>
      <% } %>
  </section>
</main>