  <head>
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"
      integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w=="
      crossorigin="anonymous" />

  </head>
  <nav class="navbar">
    <div class="navbar__logo"><a href="/">VideoClub</a></div>
    <div class="navbar__faq"><a href="/faq">FAQ</a></div>
    <div class="navbar__myrents"><a href="/myrents">MyRents</a></div>
    <div class="navbar__user"><a href="/account"><i class="far fa-user"></i>
        <%= username %>
      </a></div>
    <div class="navbar__login"><a href="/logout">Logout</a></div>
  </nav>
  <main class="chat-container chat-page">
    <div class="chat-container__heading heading-secondary">Welcome to VideoClub Chat, <%= username %>!</div>
    <div class="user-list-section chat-container__users">
      <h4 class="chat-container__users-header heading-tertiary">Users</h4>
      <ul class="user-list chat-container__users-list"></ul>
    </div>
    <div class="chat-transcript-container chat-container__messages">
      <div class="chat-transcript chat-container__messages"></div>
    </div>
    <div class="chat-controls chat-container__input">
      <input class="chat-input chat-container__input--text input" type="text" placeholder="Enter a message..." />
      <button class="send-chat-button chat-container__input--btn">Send chat</button>
    </div>
  </main>